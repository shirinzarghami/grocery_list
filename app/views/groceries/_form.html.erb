<form>
   <%= render_crumbs %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </p>
  <p>
    <%= f.label :bought %><br>
    <%= f.check_box :bought, {}, "true", "false"%>
  </p>
  <p>
    <% Category.all.each do |category| %>
      <%= check_box_tag "grocery[category_ids][]", category.id, @grocery.category_ids.include?(category.id) %>
      <%= category.name%>
    <% end %>
  </p>
  <div class="field">
    <%= f.label :photo %> <br>
    <%= f.file_field :photo %>
  </div>

 <!-- camera part -->

<video id="video" width="340" height="180" autoplay></video>
<button id="snap">Snap Photo</button>
<canvas id="canvas" width="340" height="180"></canvas>

<label for="time">Time:</label> <input type="time" name="time" placeholder="9:00 AM" />
<p>
  <%= f.submit class: 'btn btn-default btn-xs'%><br>
  <%= link_to "Back", groceries_path, class: 'btn btn-link btn-xs', class: 'glyphicon glyphicon-arrow-left aria-hidden="true"' %>
  <%= link_to "Home", categories_path, class: 'btn btn-link btn-xs', class: 'glyphicon glyphicon-home aria-hidden="true"' %>
</p>
</form>
