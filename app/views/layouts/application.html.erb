      <div class="navbar-header pade-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
          <i class="fa fa-bar"></i>
        </button>
      </div>
      <div class="row">
          <div class=" col-md-3"></div>
          <div class="col-xs-12 col-sm-12 col-md-6">


            <%= yield %>

          </div>
